view {
  box-sizing: border-box;
}
page {
  background: #fff;
}
.search-input-ctn {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  height: 86rpx;
  padding: 17rpx 26rpx;
  background: #b2b2b2;
}
.search-input-main {
  display: flex;
  flex-grow: 1;
  margin: 0 20rpx;
  background: #fff;
  line-height: 54rpx;
  border-radius: 16rpx;
}
.search-input-main input {
  flex-grow: 1;
}
.search-input-main icon {
  margin: 0 10rpx;
}
.search-btn {
  width: 80rpx;
  line-height: 54rpx;
  color: #fff;
}
.shop-section {
  position: relative;
  box-sizing: border-box;
  padding: 23rpx 38rpx;
  border-bottom: 1px solid #f5f5f5;
}
.shop-section-title {
  font-size: 34rpx;
  padding-bottom: 20rpx;
}
.shop-section-main {
  font-size: 24rpx;
  display: flex;
}
.shop-section-main .address {
  width: 500rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.shop-cover {
  padding-right: 52rpx;
}
.shop-cover image {
  width: 124rpx;
  height: 124rpx;
}
.shop-order {
  position: absolute;
  top: 23rpx;
  right: 38rpx;
  width: 120rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  border-radius: 12rpx;
  background: red;
  color: #fff;
}
.shop-msg {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.toDetails {
  display: flex;
}

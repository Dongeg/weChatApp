/**index.wxss**/
view {
  box-sizing: border-box;
}
.coverview {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  background: #eee;
  border-top: 1px solid #ccc;
}
.back {
  position: absolute;
  bottom: 200rpx;
  left: 50rpx;
  width: 100rpx;
  height: 100rpx;
}
.center-marker {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 50rpx;
  height: auto;
  margin-top: -78rpx;
  margin-left: -25rpx;
}
.index-top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  transition: all 0.35s ease-out 0.2s;
}
.index-top-content {
  background: #b2b2b2;
  height: 220rpx;
}
.show-col-btn {
  position: absolute;
  bottom: -1;
  left: 50%;
  transform: translate(-50%, 0);
  width: 200rpx;
  height: 20rpx;
  background: #b2b2b2;
  color: #fff;
  text-align: center;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.show-col-btn cover-image {
  width: 26rpx;
  height: 12rpx;
  margin: 0 87rpx;
}
.topShow {
  top: 0rpx;
}
.topHide {
  top: -220rpx;
}
.toSearch-btn {
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translate(-50%, 0);
  background: #fff;
  color: #b2b2b2;
  font-size: 28rpx;
  text-align: center;
  width: 320rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 16rpx;
}

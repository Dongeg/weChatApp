/**app.wxss**/
view {
  box-sizing: border-box;
}
page {
  height: 100%;
  background: #ebebeb;
  font-size: 30rpx;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.flex {
  display: flex;
}
.link-menu-list {
  margin-top: 26rpx;
  padding: 0 90rpx;
  background: #fff;
}
.link-menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #f5f5f5;
}
.link-menu-item image {
  width: 18rpx;
  height: 40rpx;
}
.comment-item-title-left {
  display: flex;
  align-items: center;
}
.comment-item-images {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.comment-item-images image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
